mixin rangeSlider(options)
  - var {label = "", description = "", unit = "", from = 0, to = 0, max = 0, min = 0 } = options
  - var newFrom = `${from.toString().replace(/\B(?=(\d{3})+(?!\d))/g, "&nbsp;")}${unit}`
  - var newTo = `${to.toString().replace(/\B(?=(\d{3})+(?!\d))/g, "&nbsp;")}${unit}`

  .rangeSlider
    label.rangeSlider__label
      p.rangeSlider__heading
        span.rangeSlider__tagline= label
        span.rangeSlider__caption!= `${newFrom} - ${newTo}`
      input.rangeSlider__input(
        type="text"
        name="costRange"
        value=""
        data-postfix= unit
        data-min= min
        data-max= max
        data-from= from
        data-to= to
      )
    if description
      p.rangeSlider__description= description