mixin input(options = {})
  - var { label, type = ""} = options
    .formElement
        label.formElement__wrapper
            div.formElement__title
                = label
                if type
                    .formElement__type= type
            - var inputClass = "formElement__input"
            if (type.indexOf("Hover") !== -1)
              - inputClass += " formElement__input_hovered"
            input(class= inputClass)&attributes(attributes)