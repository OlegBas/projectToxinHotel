extends ../../layouts/ui-kit
include ../../components/renderAllColors/renderAllColors
include ../../components/input/input
include ../../components/selectElement/selectElement
include ../../components/dateDropdown/dateDropdown
include ../../components/button/button
include ../../components/toggle/toggle
include ../../components/radioGroup/radioGroup
include ../../components/calendar/calendar
include ../../components/formBox/formBox
include ../../components/roomItem/roomItem


block head
  - var title = "Карточки сайта";


block content
    -
        var items = [
            {title: "Взрослые", count: 0, typeOfData: "Гости"},
            {title: "Дети", count: 0, typeOfData: "Гости"},
            {title: "Младенцы", count: 0},
        ]
        var itemsWithGuests = [
            {title: "Взрослые", count: 2, typeOfData: "Гости"},
            {title: "Дети", count: 1, typeOfData: "Гости"},
            {title: "Младенцы", count: 0},
        ]

    main.ui-kit-page
        .container
            .ui-kit-row
                .ui-kit-column
                    .card
                        +formBox({title: "Найдём номера под ваши пожелания"})
                            .formBox__item
                                +dateDropdown({split: true})
                            .formBox__item
                                +selectElement({items, label: "Гости", name: "guestCount", required: true, placeholder: "Сколько гостей", withButtons: true})
                                +button({name: "Подобрать номер", icon: "arrow_forward", size: "l", href: "search.html"})
                    .card
                        -
                            var radioGroup = {
                                name: "user-gender",
                                title: "Ваш пол",
                            radioButtons: [
                                {label: "Мужчина", value: "man", checked: true},
                                {label: "Женщина", value: "woman"}
                            ]
                            }
                        +formBox({title: "Регистрация аккаунта"})
                            .formBox__item
                                +input()(placeholder="Имя" name="user-name" required)
                            .formBox__item
                                +input()(placeholder="Фамилия" name="user-surname")
                            .formBox__item
                                +radioGroup(radioGroup)
                            .formBox__item
                                +input({label: "Дата рождения"})(placeholder="ДД.ММ.ГГГГ" name="user-bday")
                            .formBox__item
                                +input({label: "Данные для входа в сервис"})(type="email" placeholder="Email" name="user-email" required)
                            .formBox__item
                                +input()(type="password" placeholder="Пароль" name="user-password" required)
                            .formBox__item
                                +toggle({label: "Получать спецпредложения", name: "allow-notifications"})
                            .formBox__item  
                                +button({name: "Перейти к оплате", icon: "arrow_forward", size: "l"})(type="submit")
                            .formBox__item
                                p.dialog__text Уже есть аккаунт на Toxin
                                +button({name: "Войти", type: "secondary", href: "signin.html", size: "l"})
                .ui-kit-column
                    .card
                        +formBox({number: "888", isLux: true, cost: 9990})
                            .formBox__item
                                +dateDropdown({split: true, start: new Date(2020, 7, 19), end: new Date(2020, 7, 23)})
                            .formBox__item
                                +selectElement({items: itemsWithGuests, label: "Гости", name: "guestCount", required: true, placeholder: "Сколько гостей", withButtons: true})
                            .formBox__item
                                
                                +button({name: "Забронировать", icon: "arrow_forward", size: "l"})(type="submit")
                        .card
                            +formBox({title: "Войти"})
                                .formBox__formItem
                                    +input()(type="email" placeholder="Email" name="user-email" required)
                                .formBox__formItem
                                    +input()(type="password" placeholder="Пароль" name="user-password" required)
                                .formBox__formItem
                                    +button({name: "Войти", icon: "arrow_forward", size: "l"})(type="submit")
                                .formBox__formItem
                                    p.dialog__text Нет аккаунта на Toxin?
                                    +button({name: "Создать", type: "secondary", href: "registration.html", size: "l"})
                .ui-kit-column
                    .card
                        +calendar()
                    .card
                        +roomItem({imagesList: ["assets/images/888/1-sm.jpg", "assets/images/888/2-sm.jpg", "assets/images/sliders/3-sm.jpg", "assets/images/sliders/2-sm.jpg"], number: 888, isLux: true, cost: 9990, rate: 5, reviewCount: 145})
                    .card.card--with-room
                        +roomItem({imagesList: ["assets/images/sliders/840.jpg", "assets/images/sliders/840.jpg", "assets/images/sliders/840.jpg", "assets/images/sliders/840.jpg"], number: 840, isLux: false, cost: 9900, rate: 4, reviewCount: 65})
                                